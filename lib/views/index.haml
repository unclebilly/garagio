!!! html
%html
  %head
    %link{:rel=>"stylesheet", :href => "/style.css"}
    %script{:src => "/jquery-1.9.0.min.js"}
    %script{:src => "/index.js"}
    %meta{:content=>'initial-scale = 1.0', :name=>'viewport'}
    %meta{:content=>'width = device-width', :name=>'viewport'}
  %body
    %h1 
      Garage is 
      %span#garage_state= @door_state

    #garage
      %img#garage_door{:class => @door_state, :src => "/closed.jpg"}

    %form{:action => "/toggle"}
      %input{:type =>"submit", :value => @door_state.to_s == 'open' ? "Close door" : "Open door"}